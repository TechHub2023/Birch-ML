/**
 * Lazy `sqrt`.
 */
final class Sqrt(m:Expression<Real>) <
    ScalarUnaryExpression<Expression<Real>,Real>(m) {
  override function doCompute() {
    x <- sqrt(global.eval(m!));
  }

  override function doGrad(gen:Integer) {
    count_grad(m!, gen, d!*0.5/sqrt(global.eval(m!)));
  }
}

/**
 * Lazy `sqrt`.
 */
function sqrt(x:Expression<Real>) -> Sqrt {
  return construct<Sqrt>(x);
}
