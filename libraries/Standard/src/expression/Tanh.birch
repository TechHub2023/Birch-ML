/**
 * Lazy `tanh`.
 */
final class Tanh(m:Expression<Real>) <
    ScalarUnaryExpression<Expression<Real>,Real>(m) {
  override function doCompute() {
    x <- tanh(m!.eval());
  }

  override function doGrad(gen:Integer) {
    m!.countGrad(gen, d!*(1.0 + pow(tanh(m!.eval()), 2.0)));
  }
}

/**
 * Lazy `tanh`.
 */
function tanh(x:Expression<Real>) -> Tanh {
  return construct<Tanh>(x);
}
