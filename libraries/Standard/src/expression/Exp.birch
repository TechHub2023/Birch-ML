/**
 * Lazy `exp`.
 */
final class Exp(m:Expression<Real>) <
    ScalarUnaryExpression<Expression<Real>,Real>(m) {
  override function doCompute() {
    x <- exp(m!.eval());
  }

  override function doGrad(gen:Integer) {
    m!.countGrad(gen, d!*eval());
  }
}

/**
 * Lazy `exp`.
 */
function exp(m:Expression<Real>) -> Exp {
  return construct<Exp>(m);
}
