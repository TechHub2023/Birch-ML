/**
 * Lazy `abs`.
 */
final class Abs(m:Expression<Real>) <
    ScalarUnaryExpression<Expression<Real>,Real>(m) {
  override function doCompute() {
    x <- abs(m!.eval());
  }

  override function doGrad(gen:Integer) {
    if eval() >= 0.0 {
      m!.countGrad(gen, d!);
    } else {
      m!.countGrad(gen, -d!);
    }
  }
}

/**
 * Lazy `abs`.
 */
function abs(m:Expression<Real>) -> Abs {
  return construct<Abs>(m);
}
