class TestBetaGeometric < TestModel {
  ρ:Random<Real>;
  x:Random<Integer>;
  α:Real;
  β:Real;

  function initialize() {
    α <- simulate_uniform(1.0, 20.0);
    β <- simulate_uniform(1.0, 20.0);
  }

  function simulate() {
    ρ ~ Beta(α, β);
    x ~ Geometric(ρ);
  }

  function forward() -> Real[_] {
    y:Real[2];
    y[1] <- ρ.value();
    y[2] <- x.value();
    return y;
  }

  function backward() -> Real[_] {
    y:Real[2];
    assert !x.hasValue();
    y[2] <- x.value();
    assert !ρ.hasValue();
    y[1] <- ρ.value();
    return y;
  }

  function forwardLazy() -> Real[_] {
    y:Real[2];
    y[1] <- ρ.eval();
    y[2] <- x.eval();
    return y;
  }

  function backwardLazy() -> Real[_] {
    y:Real[2];
    assert !x.hasValue();
    y[2] <- x.eval();
    assert !ρ.hasValue();
    y[1] <- ρ.eval();
    return y;
  }

  function size() -> Integer {
    return 2;
  }
}

program test_conjugacy_beta_geometric(N:Integer <- 10000, lazy:Boolean <- false) {
  m:TestBetaGeometric;
  test_conjugacy(m, N, lazy);
}
