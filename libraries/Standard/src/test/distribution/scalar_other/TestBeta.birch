class TestBeta < TestModel {
  x:Random<Real>;
  α:Real;
  β:Real;

  function initialize() {
    α <- simulate_uniform(1.0, 20.0);
    β <- simulate_uniform(1.0, 20.0);
  }

  function simulate() {
    x ~ Beta(α, β);
  }

  function forward() -> Real[_] {
    return [x.eval()];
  }

  function backward() -> Real[_] {
    return [x.eval()];
  }

  function marginal() -> Distribution<Real> {
    return x.getDistribution();
  }

  function size() -> Integer {
    return 1;
  }
}

program test_pdf_beta(N:Integer <- 10000, B:Integer <- 100, S:Integer <- 5,
    lazy:Boolean <- false) {
  m:TestBeta;
  m.initialize();
  m.simulate();
  test_pdf(m.marginal(), N, B, S, lazy);
}

program test_cdf_beta(N:Integer <- 10000) {
  m:TestBeta;
  m.initialize();
  m.simulate();
  test_cdf(m.marginal(), N);
}
