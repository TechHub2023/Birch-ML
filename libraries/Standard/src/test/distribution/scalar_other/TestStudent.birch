class TestStudent < TestModel {
  x:Random<Real>;
  k:Real;
  μ:Real;
  σ2:Real;

  function initialize() {
    k <- simulate_uniform(2.0, 10.0);  // > 2.0 for finite variance
    μ <- simulate_uniform(-10.0, 10.0);
    σ2 <- simulate_uniform(0.0, 10.0);
  }

  function simulate() {
    x ~ Student(k, μ, σ2);
  }

  function forward() -> Real[_] {
    return [x.eval()];
  }

  function backward() -> Real[_] {
    return [x.eval()];
  }

  function marginal() -> Distribution<Real> {
    return x.getDistribution();
  }

  function size() -> Integer {
    return 1;
  }
}

program test_pdf_student_t(N:Integer <- 10000, B:Integer <- 100,
    S:Integer <- 5, lazy:Boolean <- false) {
  m:TestStudent;
  m.initialize();
  m.simulate();
  test_pdf(m.marginal(), N, B, S, lazy);
}

program test_cdf_student_t(N:Integer <- 10000) {
  m:TestStudent;
  m.initialize();
  m.simulate();
  test_cdf(m.marginal(), N);
}
