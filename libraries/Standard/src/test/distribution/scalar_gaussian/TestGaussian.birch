class TestGaussian < TestModel {
  x:Random<Real>;
  μ:Random<Real>;
  σ2:Random<Real>;

  function initialize() {
    μ ~ Uniform(-10.0, 10.0);
    σ2 ~ Uniform(0.1, 10.0);
  }

  function simulate() {
    x ~ Gaussian(μ, σ2);
  }

  function forward() -> Real[_] {
    return [x.eval()];
  }

  function backward() -> Real[_] {
    return [x.eval()];
  }

  function marginal() -> Distribution<Real> {
    return x.getDistribution();
  }

  function size() -> Integer {
    return 1;
  }
}

program test_pdf_gaussian(N:Integer <- 10000, B:Integer <- 100,
    S:Integer <- 5, lazy:Boolean <- false) {
  m:TestGaussian;
  m.initialize();
  m.simulate();
  test_pdf(m.marginal(), N, B, S, lazy);
}

program test_cdf_gaussian(N:Integer <- 10000) {
  m:TestGaussian;
  m.initialize();
  m.simulate();
  test_cdf(m.marginal(), N);
}

program test_grad_gaussian(N:Integer <- 1000, backward:Boolean <- false) {
  m:TestGaussian;
  test_grad(m, N, backward);
}
