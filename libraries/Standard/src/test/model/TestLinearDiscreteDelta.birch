class TestLinearDiscreteDelta < Model {
  ρ:Random<Real>;
  x:Random<Integer>;
  y:Random<Integer>;
  a:Integer;
  n:Integer;
  α:Real;
  β:Real;
  c:Integer;
  neg:Boolean;

  function initialize() {
    a <- 2*simulate_uniform_int(0, 1) - 1;
    n <- simulate_uniform_int(1, 100);
    α <- simulate_uniform(0.0, 10.0);
    β <- simulate_uniform(0.0, 10.0);
    c <- simulate_uniform_int(0, 100);
    neg <- simulate_bernoulli(0.5);
  }

  function simulate() {
    ρ ~ Beta(α, β);
    x ~ Binomial(n, ρ);
    if neg {
      y ~ Delta(a*x - c);
    } else {
      y ~ Delta(a*x + c);
    }
  }

  function forward() -> Real[_] {
    z:Real[2];
    assert !ρ.hasValue();
    z[1] <- ρ.value();
    assert !x.hasValue();
    z[2] <- x.value();
    return z;
  }

  function backward() -> Real[_] {
    z:Real[2];
    assert !x.hasValue();
    z[2] <- x.value();
    assert !ρ.hasValue();
    z[1] <- ρ.value();
    return z;
  }

  function forwardLazy() -> Real[_] {
    z:Real[2];
    assert !ρ.hasValue();
    z[1] <- ρ.get();
    assert !x.hasValue();
    z[2] <- x.get();
    return z;
  }

  function backwardLazy() -> Real[_] {
    z:Real[2];
    assert !x.hasValue();
    z[2] <- x.get();
    assert !ρ.hasValue();
    z[1] <- ρ.get();
    return z;
  }

  function marginal() -> Distribution<Integer> {
    return y.distribution()!;
  }
}
