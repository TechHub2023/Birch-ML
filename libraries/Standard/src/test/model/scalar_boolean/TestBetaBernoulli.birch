class TestBetaBernoulli < TestModel {
  ρ:Random<Real>;
  x:Random<Boolean>;

  function initialize() {
    //
  }

  function simulate() {
    α:Real <- simulate_uniform(1.0, 20.0);
    β:Real <- simulate_uniform(1.0, 20.0);
    ρ ~ Beta(α, β);
    x ~ Bernoulli(ρ);
  }

  function forward() -> Real[_] {
    y:Real[2];
    y[1] <- ρ.value();
    y[2] <- x.value();
    return y;
  }

  function backward() -> Real[_] {
    y:Real[2];
    assert !x.hasValue();
    y[2] <- x.value();
    assert !ρ.hasValue();
    y[1] <- ρ.value();
    return y;
  }

  function forwardLazy() -> Real[_] {
    y:Real[2];
    y[1] <- ρ.eval();
    y[2] <- x.eval();
    return y;
  }

  function backwardLazy() -> Real[_] {
    y:Real[2];
    assert !x.hasValue();
    y[2] <- x.eval();
    assert !ρ.hasValue();
    y[1] <- ρ.eval();
    return y;
  }

  function marginal() -> Distribution<Boolean> {
    return x.getDistribution();
  }

  function size() -> Integer {
    return 2;
  }
}
