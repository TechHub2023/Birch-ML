class TestScaledGammaExponential < Model {
  λ:Random<Real>;
  x:Random<Real>;

  a:Real;
  k:Real;
  θ:Real;
  neg:Boolean;

  function initialize() {
    a <- simulate_uniform(0.0, 10.0);
    k <- simulate_uniform(2.1, 10.0);
    θ <- simulate_uniform(0.1, 10.0);
    neg <- simulate_bernoulli(0.5);
  }

  function simulate() {
    λ ~ Gamma(k, θ);
    if neg {
      x ~ Exponential(λ/a);
    } else {
      x ~ Exponential(a*λ);
    }
  }

  function forward() -> Real[_] {
    y:Real[2];
    y[1] <- λ.value();
    y[2] <- x.value();
    return y;
  }

  function backward() -> Real[_] {
    y:Real[2];
    assert !x.hasValue();
    y[2] <- x.value();
    assert !λ.hasValue();
    y[1] <- λ.value();
    return y;
  }

  function forwardLazy() -> Real[_] {
    y:Real[2];
    y[1] <- λ.eval();
    y[2] <- x.eval();
    return y;
  }

  function backwardLazy() -> Real[_] {
    y:Real[2];
    assert !x.hasValue();
    y[2] <- x.eval();
    assert !λ.hasValue();
    y[1] <- λ.eval();
    return y;
  }

  function marginal() -> Distribution<Real> {
    return x.getDistribution();
  }
}
