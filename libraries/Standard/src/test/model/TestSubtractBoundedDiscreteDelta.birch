class TestSubtractBoundedDiscreteDelta < Model {
  x1:Random<Integer>;
  x2:Random<Integer>;
  s:Random<Integer>;

  function initialize() {
    //
  }

  function simulate() {
    x1 ~ Binomial(100, 0.75);
    x2 ~ Binomial(100, 0.25);
    s ~ Delta(x1 - x2);
  }

  function forward() -> Real[_] {
    y:Real[2];
    y[1] <- x1.value();
    y[2] <- x2.value();
    return y;
  }

  function backward() -> Real[_] {
    y:Real[2];
    s.value();
    assert !x1.hasValue();
    assert !x2.hasValue();
    y[2] <- x2.value();
    y[1] <- x1.value();
    return y;
  }

  function forwardLazy() -> Real[_] {
    y:Real[2];
    y[1] <- x1.eval();
    y[2] <- x2.eval();
    return y;
  }

  function backwardLazy() -> Real[_] {
    y:Real[2];
    s.eval();
    assert !x1.hasValue();
    assert !x2.hasValue();
    y[2] <- x2.eval();
    y[1] <- x1.eval();
    return y;
  }
}
