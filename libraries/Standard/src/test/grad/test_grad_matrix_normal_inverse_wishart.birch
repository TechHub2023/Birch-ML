/*
 * Test matrix normal-inverse-Wishart grad evaluations.
 */
program test_grad_matrix_normal_inverse_wishart(R:Integer <- 3,
    C:Integer <- 2, N:Integer <- 1000) {
  M:Real[R,C];
  U:Real[R,R];
  k:Real;
  Ψ:Real[C,C];

  for i in 1..R {
    for j in 1..C {
      M[i,j] <- simulate_uniform(-10.0, 10.0);
    }
  }
  for i in 1..R {
    for j in 1..R {
      U[i,j] <- simulate_uniform(-2.0, 2.0);
    }
  }
  k <- C + 1.0 + simulate_uniform(0.0, 10.0);
  for i in 1..C {
    for j in 1..C {
      Ψ[i,j] <- simulate_uniform(-2.0, 2.0);
    }
  }
  U <- outer(U);
  Ψ <- outer(Ψ);

  let π <- MatrixNormalInverseWishart(M, U, Ψ, k);
  test_grad(π, N);
}
