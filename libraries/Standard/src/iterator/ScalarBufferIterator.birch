/**
 * Iterator over a scalar, wrapped in a [Buffer](../Buffer) object.
 *
 * - x: Values.
 */
final class ScalarBufferIterator<Type>(x:Type) < Iterator<Buffer> {
  /**
   * Scalar.
   */
  x:Type? <- x;

  function hasNext() -> Boolean {
    return this.x?;
  }

  function next() -> Buffer {
    let x' <- this.x!;
    this.x <- nil;
    return make_buffer(x');
  }
}
