/**
 * Delayed form with one argument.
 */
struct Unary<Middle>(m:Middle) < Form {
  /**
   * Argument.
   */
  m:Middle <- m;

  hpp{{
  void reset() const {
    birch::reset(m);
  }

  void relink(const RelinkVisitor& visitor) const {
    birch::relink(m, visitor);
  }

  void constant() const {
    birch::constant(m);
  }

  bool isConstant() const {
    return birch::is_constant(m);
  }
  }}
}

hpp{{
#define BIRCH_UNARY_FUNCTION_FORM(f, f_grad, ...) \
  using Value = decltype(f(birch::peek(std::declval<Middle>()), ##__VA_ARGS__)); \
  std::optional<Value> x; \
  \
  int rows() const { \
    return birch::rows(peek()); \
  } \
  \
  int columns() const { \
    return birch::columns(peek()); \
  } \
  \
  int length() const { \
    return birch::length(peek()); \
  } \
  \
  int size() const { \
    return birch::size(peek()); \
  } \
  \
  void clear() const { \
    const_cast<std::optional<Value>&>(x).reset(); \
  } \
  \
  auto value() const { \
    auto x = this->eval(); \
    this->constant(); \
    return x; \
  } \
  \
  auto eval() const { \
    auto m = birch::eval(this->m); \
    return f(m, ##__VA_ARGS__); \
  } \
  \
  auto peek() const { \
    if (!x) { \
      auto m = birch::peek(this->m); \
      const_cast<std::optional<Value>&>(x) = f(m, ##__VA_ARGS__);\
    } \
    return *x; \
  } \
  \
  auto move(const MoveVisitor& visitor) const { \
    auto m = birch::move(this->m, visitor); \
    return f(m, ##__VA_ARGS__); \
  } \
  \
  void args(const ArgsVisitor& visitor) const { \
    birch::args(this->m, visitor); \
  } \
  \
  template<class G> \
  void shallowGrad(const G& g, const GradVisitor& visitor) const { \
    auto x = birch::peek(*this); \
    auto m = birch::peek(this->m); \
    birch::shallow_grad(this->m, f_grad(g, x, m, ##__VA_ARGS__), visitor); \
    clear(); \
  } \
  \
  void deepGrad(const GradVisitor& visitor) const { \
    birch::deep_grad(this->m, visitor); \
  }
}}
