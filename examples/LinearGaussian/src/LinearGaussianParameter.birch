/**
 * Parameter for LinearGaussianModel.
 */
class LinearGaussianParameter {
  a:Real <- 0.8;
  b:Real <- 10.0;
  σ2_x:Real <- 1.0;
  σ2_y:Real <- 0.01;

  function read(buffer:Buffer) {
    a <-? buffer.get<Real>("a");
    b <-? buffer.get<Real>("b");
    σ2_x <-? buffer.get<Real>("σ2_x");
    σ2_y <-? buffer.get<Real>("σ2_y");
  }

  function write(buffer:Buffer) {
    buffer.set("a", a);
    buffer.set("b", b);
    buffer.set("σ2_x", σ2_x);
    buffer.set("σ2_y", σ2_y);
  }
}
